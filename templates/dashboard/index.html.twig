{% extends 'connected.html.twig' %}
{% block body %}
    <div class="container">
        <div class="card-columns">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Votre protefeuille
                    </h5>
                    <ul class="list-group list-group-flush">
                        {% for wallet in wallets %}
                            <li class="list-group-item">
                                {{ wallet.currency.symbol }}
                                {{ wallet.amount }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    Votre société
                </div>
                {% if company is empty %}
                    <div class="card-body">
                        Vous n'avez pas encore de société.
                        Le jeu serait bien plus intéressant si vous
                        <a href="{{ path('company_create') }}">montiez votre société et vous lanciez</a> !
                    </div>
                {% else %}
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('company_detail', {'company': company.getId}) }}">{{ company.getName }}</a>
                    </h5>
                    <div class="card-text">
                        {% if mainWallet is empty %}
                            Fonds épuisés
                        {% else %}
                            {{ mainWallet.currency.symbol }}
                            {{ mainWallet.amount }}
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}